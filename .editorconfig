root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.{java,properties,xml}]
indent_style = tab
indent_size = 4
tab_width = 4
# continuation_indent_size はエディタ非標準のため削除（必要なら IDE 側で設定）

[*.md]
trim_trailing_whitespace = false